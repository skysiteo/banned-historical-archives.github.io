{"pageProps":{"article":{"id":"1701b23e21","title":"上当了——给三害大人","origin":"","is_range_date":false,"dates":[{"id":"d45b5eeb99","index":0,"year":1957,"month":6,"day":null,"articleId":"1701b23e21"}],"tags":[{"id":"c9f57d6426","name":"文章","type":"文稿类型"}],"aliases":[],"publications":[{"id":"CCRD-fanyou","name":"中国反右运动数据库","internal":false,"official":false,"type":"db","author":"宋永毅","files":""}],"authors":[{"id":"19f3f1b8ea","name":"北京大学"},{"id":"81d02828fd","name":"李燕生"}]},"publication_details":{"CCRD-fanyou":{"comments":[],"contents":[{"id":"e59d63cc28","type":"title","text":"上当了——给三害大人","index":0,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"111de71c41","type":"authors","text":"北京大学李燕生","index":1,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"c327ebb961","type":"paragraph","text":"连日响应鸣放，","index":2,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"fff39cf291","type":"paragraph","text":"今日始知上当，","index":3,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"977e3819bc","type":"paragraph","text":"实在怪我太混帐，","index":4,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"3306c420da","type":"paragraph","text":"三害大人原谅。","index":5,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"2dc88fed6a","type":"paragraph","text":"整风，整风，","index":6,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"19b7f0c06d","type":"paragraph","text":"争鸣，争鸣，","index":7,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"2c696daf60","type":"paragraph","text":"我年幼无知，","index":8,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"c83b23f36a","type":"paragraph","text":"经验不灵，","index":9,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"08ac5bcf72","type":"paragraph","text":"把心里想的，","index":10,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"3f29d26abf","type":"paragraph","text":"一起说清","index":11,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"18a37fc2f0","type":"paragraph","text":"得到的不是说理，","index":12,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"efb4b7646a","type":"paragraph","text":"而是围攻。","index":13,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"474fdc5b6a","type":"paragraph","text":"说我是","index":14,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"75d768bf62","type":"paragraph","text":"杜勒斯的传声筒；","index":15,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"225d8a00c3","type":"paragraph","text":"说我是","index":16,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"256b080419","type":"paragraph","text":"什么“自由之声”。","index":17,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"e3ebbfb16e","type":"paragraph","text":"它叫我细雨和风，","index":18,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"b7c9535e7b","type":"paragraph","text":"他对我闪电雷轰。","index":19,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"b3ede5efad","type":"paragraph","text":"一切本人皆看清，","index":20,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"5864960438","type":"paragraph","text":"从明天起埋头书本；","index":21,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"ce74f332a5","type":"paragraph","text":"乘乘风凉，","index":22,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"72b262f9d9","type":"paragraph","text":"悠然度余生。","index":23,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"},{"id":"b8ef84778a","type":"paragraph","text":" 来源：北京大学社会主义思想教育委员会编印《北京大学右派分子反动言论汇集》，一九五七年十月。","index":24,"publicationId":"CCRD-fanyou","articleId":"1701b23e21"}],"page":{"id":"a16188365b","publicationId":"CCRD-fanyou","articleId":"1701b23e21","start":0,"end":0}}}},"__N_SSG":true}